@model IEnumerable<BookStore.Data.Models.ViewModels.AuthorVM>

@{
    ViewData["Title"] = "Authors";
    var photoPath = $"~/pictures/uploads/books/";
}

<div class="container">
    <p class="text-center cat-header">Authors</p>

    <p>
        <a asp-area="Admin" asp-controller="Author" asp-action="CreateUpdateAuthor" class="add-btn" id="0">Create New</a>
    </p>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-msg">
            @TempData["success"]
        </div>
    }

    <ul class="category-table">
        <li class="category-table-header">
            <div class="row ">
                <div class="col category-table-item">
                    Photo
                </div>
                <div class="col category-table-item">
                    Author Name
                </div>
                <div class="col category-table-item">
                    Biography
                </div>
                <div class="col category-table-item">
                </div>
            </div>
        </li>
        @foreach (var item in Model)
        {
            <li class="category-table-li">
                <div class="row">
                    <div class="col category-table-item">
                        <img src="~/pictures/uploads/books/@item.PhotoPath" class="imageThumbnail" alt="" asp-append-version="true">
                    </div>
                    <div class="col category-table-item">
                        @item.FullName
                    </div>
                    <div class="col category-table-item">
                        @item.Biography
                    </div>
                    <div class="col category-edit-group">
                        <a class="btn add-btn" asp-area="Admin" asp-controller="Publisher"
                       asp-action="AuthorDetails" asp-route-id="@item.Id">Details</a>
                        <a class="btn edit-btn" asp-area="Admin" asp-controller="Publisher"
                       asp-action="CreateUpdatePublisher" asp-route-id="@item.Id">Edit</a>
                        <a class="btn delete-btn" asp-area="Admin" asp-controller="Publisher"
                       asp-action="DeletePublisher" asp-route-id="@item.Id">Delete</a>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>

@section  Scripts
    {
    <script src="~/scripts/categoryscript.js"></script>
}

