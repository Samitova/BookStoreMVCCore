@model BookStore.Data.Models.ViewModels.CategoryVM

@{
    ViewData["Title"] = "CreateUpdateCategory";
}

<div class="container">
    <p class="cat-header text-center">@((Model.CategoryDTO == null || Model.CategoryDTO.Id == 0) ? "Create " : "Update ")Category</p>
    <hr />
    <div class="row">
        <div class="col-md-4 align-content-center">
            <form asp-action="CreateUpdateCategory" method="post">
                <input type="hidden" asp-for="CategoryDTO.Id"/>
                <input type="hidden" asp-for="CategoryDTO.Timestamp" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CategoryDTO.CategoryName" class="control-label"></label>                                                 
                    <input asp-for="CategoryDTO.CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryDTO.CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryDTO.IconPath" class="control-label"></label>
                    <input asp-for="CategoryDTO.IconPath" class="form-control" />
                    <span asp-validation-for="CategoryDTO.IconPath" class="text-danger"></span>
                </div>              
                <div class="form-group">
                    @if (Model.CategoryDTO == null || Model.CategoryDTO.Id == 0)
                    {
                        <input type="submit" value="Create" class="addcategory" />
                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn edit-categoty" />
                    }                   
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="backhref" asp-action="Index">Back to List</a>
    </div>
</div>

