@model BookStore.Data.Models.ModelsDTO.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container">
    <div class="product-card" style="width:500px;">
        <div class="card-header text-uppercase text-center">
            <h5>Do you want to delete this Category?</h5>
        </div>

        <div class="col align-content-center">        
            <form asp-action="DeleteCategory" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.Timestamp" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="@Model.CategoryName" class="control-label"></label>
                    <input asp-for="@Model.CategoryName" class="form-control" />
                    <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.IconPath" class="control-label"></label>
                    <input asp-for="@Model.IconPath" class="form-control" />
                    <span asp-validation-for="@Model.IconPath" class="text-danger"></span>
                </div>
                <div class="form-group">                   
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a class="btn btn-dark" asp-action="Index">Cancel</a>                   
                </div>
            </form>
        </div>
    </div>  
</div>