@model BookStore.Data.Models.ViewModels.PublisherVM

@{
    ViewData["Title"] = "Delete Publisher";
}

<div class="container">
    <div class="product-card" style="width:500px;">
        <div class="card-header text-uppercase text-center">
            <h5>Do you want to delete this Publisher?</h5>
        </div>

        <div class="col align-content-center">
            <form asp-action="DeletePublisher" method="post">
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="Timestamp"/>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <p> @Model.PublisherName</p>                   
                </div>
                <div class="form-group">
                    <p> @Model.City</p>
                </div>
                <div class="form-group">
                    <p> @Model.Phone</p>                    
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a class="btn btn-dark" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
