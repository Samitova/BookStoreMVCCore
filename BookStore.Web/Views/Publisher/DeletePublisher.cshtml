@model PublisherViewModel

@{
    ViewData["Title"] = "Delete Publisher";
}

<div class="container">
    <div class="card m-auto" style="width:500px;">
         <div class="card-header text-center">
            <h5>Do you want to delete this Publisher?</h5>
        </div>        
        <form asp-action="DeletePublisher" method="post">
            <input type="hidden" asp-for="Timestamp" />
            <div asp-validation-summary="All" class="text-danger"></div>       
            <div class="card-body">
                <div class="form-group">
                    <p>Publisher: @Model.PublisherName</p>                                  
                </div>
                <div class="form-group">
                    <p>City: @Model.City</p>
                </div>
                <div class="form-group">
                    <p>Phone: @Model.Phone</p>
                </div>               
             </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-dark" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>    
</div>
