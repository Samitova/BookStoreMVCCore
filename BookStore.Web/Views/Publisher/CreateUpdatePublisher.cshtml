@model PublisherViewModel

@{
    ViewData["Title"] = (Model == null || Model.Id == 0) ? "Create Publisher" : "Edit Publisher";
}

<div class="container">

    <div class="product-card" style="width:500px;">
        
        <div class="card-header text-uppercase text-center">
            <h5>@((Model == null || Model.Id == 0) ? "Create " : "Update ")Publisher</h5>
        </div> 
        
        <div class="col align-content-center">
            <form asp-action="CreateUpdatePublisher" method="post">
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="Timestamp" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PublisherName" class="control-label"></label>                                                 
                    <input asp-for="PublisherName" class="form-control" />
                    <span asp-validation-for="PublisherName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>   
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>   

                <div class="form-group">
                    @if (Model == null || Model.Id == 0)
                    {
                        <input type="submit" value="Create" class="add-btn" />
                    }
                    else
                    {
                        <input type="submit" value="Update" class="add-btn" />
                    }                   
                </div>
            </form>
            <div>
                <a class="backhref" asp-action="Index">Back to List</a>
            </div>
        </div>  
    </div>
</div>
