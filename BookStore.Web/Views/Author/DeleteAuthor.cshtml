@model AuthorViewModel

@{
    ViewData["Title"] = "Delete Author";
    var photoPath = $"/pictures/uploads/authors/{Model.PhotoPath}";
}


<div class="container">
    <div class="card m-auto" style="width:500px;">
        <div class="card-header text-center">
            <h5>Do you want to delete this Author?</h5>
        </div>
        <form asp-action="DeletePublisher" method="post">
            <input type="hidden" asp-for="Timestamp" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-body">
                <div class="form-group">
                    <img src="@photoPath" class="img-fluid author-image" alt="..." asp-append-version="true">
                </div>
                <div class="form-group">                    
                    <p>@Model.FullName</p>
                </div>
                <div class="form-group">                    
                    <p>@Model.Biography</p>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-dark" asp-controller="Author" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
    <div>
        <a class="btn"></a>
    </div>
</div>

