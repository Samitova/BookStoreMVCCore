@model AuthorViewModel

@{
    ViewData["Title"] = "Delete Author";
    var photoPath = $"/pictures/uploads/authors/{Model.PhotoPath}";
}

<div class="container">
    <div class="product-card" style="width:500px;">
        <div class="card-header text-uppercase text-center">
            <h5>Do you want to delete this Author?</h5>
        </div>

        <div class="col align-content-center">
            <form asp-action="DeleteAuthor" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Timestamp" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <img src="@photoPath" class="img-fluid author-image" alt="..." asp-append-version="true">

                <div class="form-group">                    
                    <p> @Model.FullName </p>                    
                </div>
                <div class="form-group">                  
                    <p> @Model.Biography </p>                                      
                </div>               
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a class="btn btn-dark" asp-controller="Author" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
