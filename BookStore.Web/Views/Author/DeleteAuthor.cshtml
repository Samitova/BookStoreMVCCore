@model AuthorViewModel

@{
    ViewData["Title"] = "Delete Author";
    var photoPath = $"/pictures/uploads/authors/{Model.PhotoPath}";
}

<div class="container">
    <div class="product-card" style="width:500px;">
        <div class="card-header text-center">
            <h5>Do you want to delete this Author?</h5>
        </div>
        <form asp-action="DeleteAuthor" asp-controller="Author" method="post">
            <input type="hidden" asp-for="Timestamp"/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-body">
                <div class="card-body">
                    <div class="form-group">
                        <img src="@photoPath" class="img-fluid author-image" alt="..." asp-append-version="true">
                    </div>
                    <div class="form-group">
                        <p>@Model.FullName</p>
                    </div>
                    <div class="form-group">
                        <p>@Model.Biography</p>
                    </div>
                </div>
            </div>
            <div class="card-footer">                
                <input type="submit" value="Delete" class="btn alrt-btn" />
                <a class="btn return-btn" asp-controller="Author" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>    
</div>
