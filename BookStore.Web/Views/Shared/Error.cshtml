@{
    ViewData["Title"] = "Error";
}

@if (ViewBag.ErrorTitle == null)
{
    <div class="container">
        <div class="product-card" style="width:500px;">
            <div class="text-uppercase text-center alert alert-danger">
                <h5>Error</h5>
            </div>
            <div class="col align-content-center">
                <div class="form-group">
                    <p>Error occured while processing you request.</p>
                    <p>The support team is already notified and we are working on the fix.</p>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <a asp-controller="Book" asp-action="Index">Click here to navigate to home page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="product-card" style="width:500px;">
            <div class="text-uppercase text-center  alert-danger">
                <h5>@ViewBag.ErroeTitle</h5>
            </div>
            <div class="col align-content-center">
                <div class="form-group">
                    <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <a asp-controller="Book" asp-action="Index">Click here to navigate to home page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
