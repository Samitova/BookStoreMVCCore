@{
    ViewData["Title"] = "404 Error";
}

<div class="container">
    <div class="product-card" style="width:500px;">
        <div class="card-header text-center">
            <h5> 404 Not Found Error</h5>
        </div>
        <div class="card-body">
            <div class="form-group">
                <h6>@ViewBag.ErrorMessage</h6>
            </div>
        </div>
        <div class="card-footer">
            <a class="btn return-btn" asp-controller="Book" asp-action="Index">Return Home</a>
        </div>
    </div>
</div>