@model BookStore.DataAccess.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container">
    <div class="product-card" style="width:500px;">
        <div class="card-header text-center">
            <h5>Do you want to delete this Category?</h5>
        </div>
       <form asp-action="DeleteCategory" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.Timestamp" />
                <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-body">

                <div class="form-group">
                    <p> @Model.CategoryName </p>
                </div>
                <div class="form-group category-icon">
                    <p><i class="@Model.IconPath"></i></p>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn alrt-btn">Delete</button>
                <a class="btn return-btn" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</div>
