@model EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<div class="container">   
    <div class="card">
        <div class="card-header text-center">
            <h5>Role ID: @Model.Id</h5>
        </div>        
        <form  asp-action="EditRole" asp-controller="Administration" method="post">    
            <div asp-validation-summary="All" class="text-danger"></div>       
            <div class="card-body">   
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>                    
                    <input asp-for="RoleName" class="form-control"/>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>     
             </div>
            <div class="card-footer">
                <input type="submit" value="Edit" class="btn edit-btn"/>
                <a class="btn delete-btn" asp-controller="Administration" asp-action="ListRoles" asp-route-id="@Model.Id">Cancel</a>
            </div>
        </form>       
    </div>

    <div class="card">
        <div class="card-header text-center">
            <h5>Users in this role</h5>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <div class="card-item">@user</div>
                }
            }
            else
            {
                <div class="card-item">None at the moment</div>
            }           
        </div>
        <div class="card-footer">
            <a class="btn edit-btn" style="width:auto;" asp-controller="Administration" asp-action="EditUsersInRole"
               asp-route-roleId="@Model.Id">Manage User</a>
        </div>
    </div>
</div>