@model BookStore.ViewModelData.CreateRoleViewModel

@{
    ViewData["Title"] = "Create New Role";
}

<div class="container">
    <div class="product-card" style="width:500px;">
        <div class="card-header text-uppercase text-center">
            <h5>Create New Role</h5>
        </div>

        <div class="col align-content-center">
            <form asp-action="CreateRole" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add Role" class="add-btn" />
                </div>
                <a class="backhref" asp-controller="Administration" asp-action="ListRoles">Back to Role List</a>
            </form>
        </div>
    </div>
</div>

